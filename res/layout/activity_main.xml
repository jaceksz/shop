<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/przegladajButton"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/szukajButton"
        android:layout_below="@+id/szukajButton"
        android:onClick="przegladaj_clicked"
        android:text="@string/przegladaj" />

    <Button
        android:id="@+id/szukajButton"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:onClick="szukaj_clicked"
        android:text="@string/szukaj" />

    <Button
        android:id="@+id/wyjdzButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/przegladajButton"
        android:layout_alignParentBottom="true"
        android:onClick="wyjdz_clicked"
        android:text="@string/wyjdz" />

</RelativeLayout>
